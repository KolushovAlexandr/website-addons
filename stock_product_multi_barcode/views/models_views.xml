<odoo>

    <record id="view_partner_form_barcode" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field eval="300" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group>
                    <group string="Product Barcodes" name="product_barcodes">
                        <field name="barcode_ids" attrs="{'invisible':[('supplier','=',False)]}">
                            <tree editable="bottom">
                                <field name="barcode"/>
                                <field name="product_id"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_product_supplier_barcode_inherit" model="ir.ui.view">
        <field name="name">product.template.supplier.barcode.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
        <field eval="300" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="inside">
                <group string="Vendors Barcodes" name="product_barcodes">
                    <field name="barcode_ids">
                        <tree editable="bottom">
                            <field name="barcode"/>
                            <field name="partner_id"/>
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
