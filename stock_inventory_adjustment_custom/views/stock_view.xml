<odoo>

    <record id="view_inventory_form_inherit" model="ir.ui.view">
        <field name="name">stock.inventory.form</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field eval="300" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='exhausted']" position="after">
                <field name="partner_supplier_id" attrs="{'invisible': [('filter', 'not in', ('supplier'))], 'required': [('filter', 'in', ('supplier'))]}"/>
                <field name="negative_location" attrs="{'invisible': [('filter', 'not in', ('negative_stock'))], 'required': [('filter', 'in', ('negative_stock'))]}"/>
            </xpath>
        </field>
    </record>

</odoo>
